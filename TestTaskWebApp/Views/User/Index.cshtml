<!DOCTYPE html>
<html>
<head>
    <title>Welcome @ViewBag.UserName!</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Custom styles */
        .profile-section {
            border: 2px solid #ccc;
            padding: 20px;
        }

        img {
            max-width: 100%;
            height: auto;
            display: block;
            margin: 0 auto; /* Center the image */
        }

        .token {
            color: #8A2BE2; /* Red-violet color */
            word-wrap: break-word; /* Allow long words to break and wrap onto the next line */
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <div class="profile-section">
                    <h1>Welcome @ViewBag.UserName!</h1>
                    <p>Access Token: <span class="token">@ViewBag.AccessToken</span></p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="profile-section">
                    <img src="/img/c36bf801-28f2-4492-b5a3-5f6150f0938f.png" alt="Profile Picture" height="60" width="60">
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap JS (optional) -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
